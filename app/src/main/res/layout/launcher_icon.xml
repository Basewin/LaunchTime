<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/launcher_width"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingEnd="@dimen/launcher_padding_side"
    android:paddingStart="@dimen/launcher_padding_side"
    android:paddingTop="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/launcher_icon"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_width"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app" />

    <TextView
        android:id="@+id/launcher_text"
        android:layout_width="@dimen/icon_label_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:height="@dimen/icont_label_height"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/launcher_fontsize"
        android:textStyle="bold" />
</LinearLayout>